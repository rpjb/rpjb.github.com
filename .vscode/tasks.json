{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "jekyll",
            "type": "shell",
            "command": "jekyll",
            "args": [
                "serve",
                "--livereload",
                "--drafts"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "browser",
            "type": "shell",
            "command": "/Applications/'Google Chrome'.app/Contents/MacOS/'Google Chrome'",
            "args": [
                "http://localhost:4000/"
            ],
            "problemMatcher": []
        }
    ]
}